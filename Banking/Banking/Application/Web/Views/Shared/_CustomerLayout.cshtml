<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        <a href="@Url.Action("Home", "Customer")">
                            <img src="~/Content/themes/base/images/site-logo.png" 
                                 style="max-height: 100px;" />
                        </a>
                    </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("~/Application/Web/Views/Shared/_LoginPartial.cshtml")
                    </section>
                </div>
            </div>
        </header>
        <div id="body" style="background-color: #7AC0DA; padding-bottom: 0px;">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix" style="background-color: #EFEEEF;" >
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; 2014 Unicorn Banking System</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui") 
        @Scripts.Render("~/bundles/jqueryval")
        @RenderSection("scripts", required: false)
        
    </body>
</html>
